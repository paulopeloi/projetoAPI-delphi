program APK.API;

{$APPTYPE CONSOLE}

{$R *.res}

uses
  Horse,
  Horse.Jhonson,
  Horse.Cors;

begin
  THorse
    .Use(Jhonson)
    .Use(Cors);

  THorse.Get('/ping',
    procedure(Req: THorseRequest; Res: THorseResponse; Next: TProc)
    begin
      Res.Send('pong');
    end);

    Writeln('Server is running on port 9000');
  THorse.Listen(9000);
end.
